package HumanPlayers
import PlayerExtensions
import HashList
import GameConstants

public HashList<player> g_HumanPlayers
public HashList<player> g_PlayingHumanPlayers

// ============================================================================
public function updateHumanPlayersForce()
  g_PlayingHumanPlayers.clear()
  for p in g_HumanPlayers
    if (p.isPlaying())
      g_PlayingHumanPlayers.add(p)
      print(p.getName() + " is playing")

// ============================================================================
function initializeHumanPlayersForce()
  for i = 0 to MAX_NUMBER_OF_PLAYERS - 1
    var p = Player(i)
    if (p.isControlledByUser())
      g_HumanPlayers.add(p)

// ============================================================================
init
  g_HumanPlayers = new HashList<player>()
  g_PlayingHumanPlayers = new HashList<player>()
  initializeHumanPlayersForce()
  updateHumanPlayersForce()
  print("Number of human players: " + I2S(g_HumanPlayers.size()) + " playing: " + I2S(g_PlayingHumanPlayers.size()))
