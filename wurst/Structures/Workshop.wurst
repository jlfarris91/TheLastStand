package Workshop
import TlsItemIds
import OperatableUnit
import Camp

// ============================================================================
public class Workshop extends OperatableUnit

  // --------------------------------------------------------------------------
  construct (ICamp camp)
    super(camp)

  // --------------------------------------------------------------------------
  override protected function onOperated()
    AddItemToStock(this.getUnit(), TlsItemIds.basicTools, 1, 1)

  // --------------------------------------------------------------------------
  override protected function onUnoperated()
    RemoveItemFromStock(this.getUnit(), TlsItemIds.basicTools)