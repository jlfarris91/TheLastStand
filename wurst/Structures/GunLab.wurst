package GunLab
import OperatableUnit
import TlsItemIds
import Camp

// ============================================================================
public class GunLab extends OperatableUnit

  // --------------------------------------------------------------------------
  construct (ICamp camp)
    super(camp)

  // --------------------------------------------------------------------------
  override protected function onOperated()
    AddItemToStock(this.getUnit(), TlsItemIds.huntingRifle, 1, 1)

  // --------------------------------------------------------------------------
  override protected function onUnoperated()
    RemoveItemFromStock(this.getUnit(), TlsItemIds.huntingRifle)