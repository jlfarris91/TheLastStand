package Environment
import MapBounds

weathereffect g_lordaeronRainLight
weathereffect g_windHeavy

// ============================================================================
public class Environment

  // --------------------------------------------------------------------------
  static function startRaining()
    if (g_lordaeronRainLight == null)
      g_lordaeronRainLight = AddWeatherEffect(boundRect, WeatherEffects.lordaeronRainLight)

  // --------------------------------------------------------------------------
  static function stopRaining()
    if (g_lordaeronRainLight != null)
      g_lordaeronRainLight.remove()

  // --------------------------------------------------------------------------
  static function startWind()
    if (g_windHeavy == null)
      g_windHeavy = AddWeatherEffect(boundRect, WeatherEffects.windHeavy)

  // --------------------------------------------------------------------------
  static function stopWind()
    if (g_windHeavy != null)
      g_windHeavy.remove()

  // --------------------------------------------------------------------------
  static function startFog()
    SetTerrainFogEx(0, 0.0, 4000.0, 1.000, 0.000, 0.290, 0.259)

  // --------------------------------------------------------------------------
  static function stopFog()
    ResetTerrainFog()