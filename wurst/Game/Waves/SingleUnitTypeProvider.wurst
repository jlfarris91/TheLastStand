package SingleUnitTypeProvider
import WaveSpawning
import Vector

// ============================================================================
public class SingleUnitTypeProvider implements ISpawnWaveUnitTypeProvider
  private constant int INVALID_UNIT_TYPE = -1
  private int m_unitType
  
  // --------------------------------------------------------------------------
  construct(int unitTypeId)
    m_unitType = unitTypeId

  // --------------------------------------------------------------------------
  ondestroy
    m_unitType = INVALID_UNIT_TYPE

  // --------------------------------------------------------------------------
  function setUnitType(int unitType)
    m_unitType = unitType

  // --------------------------------------------------------------------------
  function getUnitType() returns int
    return m_unitType

  // --------------------------------------------------------------------------
  override function getUnitType(SpawnWaveContext context) returns int
    return m_unitType

  // --------------------------------------------------------------------------
  override function getUnitTypes(SpawnWaveContext context, int count, Vector<int> output) returns int
    for i = 0 to count - 1
      output.add(m_unitType)
    return count