package NormalNightWaveGenerator
import WaveGenerator
import NightWave
import NormalZombieNightWaveGenerator
import NormalAbomNightWaveGenerator

/*
    For each player P
      Spawn no more than N zombies
        Every N seconds
          Select N spawn locations within a range of R
            Spawn N zombies at spawn location
      Once
        Select N spawn locations within a range of R
          Spawn N aboms at spawn location
      Every N seconds
        Select N spawn locations within a range of R
          Spawn N crows at spawn location
*/

// ============================================================================
public class NormalNightWaveGenerator extends WaveGenerator<NightWave>

  private constant int TOTAL_NUM_NIGHTS = 28

  // --------------------------------------------------------------------------
  construct()

    let zombieWaveGenerator = new NormalZombieNightWaveGenerator()
    ..setTotalNights(TOTAL_NUM_NIGHTS)
    addGenerator(zombieWaveGenerator)
    
    let abomWaveGenerator = new NormalAbomNightWaveGenerator()
    ..setTotalNights(TOTAL_NUM_NIGHTS)
    addGenerator(abomWaveGenerator)