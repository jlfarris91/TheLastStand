package TechAvailabilityGroup
import Vector
import PlayerExtensions


// ============================================================================
public class TechAvailabilityGroup
  private Vector<int> m_ids = new Vector<int>()

  // --------------------------------------------------------------------------
  function addTech(int id)
    m_ids.add(id)

  // --------------------------------------------------------------------------
  function removeTech(int id) returns bool
    return m_ids.remove(id)

  // --------------------------------------------------------------------------
  function enable(player p)
    setEnabled(p, true)

  // --------------------------------------------------------------------------
  function disable(player p)
    setEnabled(p, false)

  // --------------------------------------------------------------------------
  function setEnabled(player p, bool enabled)
    for techId in m_ids
      if (techId != 0)
        p.setTechAvailability(techId, enabled)