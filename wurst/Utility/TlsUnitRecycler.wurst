package TlsUnitRecycler
import UnitRecycler
import UnitMetadata
import ProjectConstants
import DebuggerDialog
import UnitRecyclerDebugger

// ============================================================================
init

  // Disable all components when stocked
  onUnitStocked() () ->
    destroyMetadataForUnit(getLastStockedUnit())

  // Enable all components when recycled
  onUnitRecycled() () ->
    createMetadataForUnit(getLastRecycledUnit())

  if (DEV_ENVIRONMENT)
    DebuggerDialog.registerFrame("RECYCLER", () -> new UnitRecyclerDebugger())