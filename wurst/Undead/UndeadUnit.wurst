package UndeadUnit
import UnitMetadata

// ============================================================================
public abstract class UndeadUnit extends UnitMetadata
  private player m_targetPlayer

  // --------------------------------------------------------------------------
  construct(unit u)
    super(u)

  // --------------------------------------------------------------------------
  function getTargetPlayer() returns player
    return m_targetPlayer

  // --------------------------------------------------------------------------
  function setTargetPlayer(player p) returns bool
    if (p == m_targetPlayer)
      return false
    m_targetPlayer = p
    return true