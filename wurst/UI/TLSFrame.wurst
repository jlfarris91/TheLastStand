package TLSFrame
import ErrorHandling

// ============================================================================
public class TLSFrame
  private player m_player
  private framehandle m_frame
  private bool m_initialized

  // --------------------------------------------------------------------------
  construct(string name, framehandle owner)
    if (owner == null)
      argumentNullError("owner")
    m_frame = createFrame(name, owner, 0, 0)
    m_frame.hide()

  // --------------------------------------------------------------------------
  construct(framehandle frame)
    if (frame == null)
      argumentNullError("frame")
    m_frame = frame
    m_frame.hide()

  // --------------------------------------------------------------------------
  ondestroy
    if (m_frame != null)
      m_frame.remove()
      m_frame = null

  // --------------------------------------------------------------------------
  function getFrameHandle() returns framehandle
    return m_frame

  // --------------------------------------------------------------------------
  function setParent(framehandle value)
    m_frame.setParent(value)

  // --------------------------------------------------------------------------
  function getParent() returns framehandle
    return m_frame != null ? m_frame.getParent() : null

  // --------------------------------------------------------------------------
  function getPlayer() returns player
    return m_player

  // --------------------------------------------------------------------------
  function setPlayer(player value)
    m_player = value

  // --------------------------------------------------------------------------
  function initialize()
    if (m_initialized)
      return
    m_initialized = true

  // --------------------------------------------------------------------------
  function show()
    if (not m_initialized)
      initialize()
    if (m_player != null)
      m_frame.show(m_player)
    else
      m_frame.show()
    
  // --------------------------------------------------------------------------
  function hide()
    if (m_player != null)
      m_frame.hide(m_player)
    else
      m_frame.hide()

  // --------------------------------------------------------------------------
  function getIsVisible() returns bool
    return m_frame != null and m_frame.isVisible()

  // --------------------------------------------------------------------------
  function setIsVisible(bool isVisible)
    if (isVisible)
      show()
    else
      hide()