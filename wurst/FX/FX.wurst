package FX

constant string MODEL_PATH_GOLD_CREDIT = "UI\\Feedback\\GoldCredit\\GoldCredit.mdl"
constant colorA COLOR_MATERIALS_TAG = colorA(255, 204, 0, 255)  

public class FX

  static function createGoldCreditEffect(real x, real y)
    var fx = AddSpecialEffect(MODEL_PATH_GOLD_CREDIT, x, y)
    DestroyEffect(fx)

  static function createMaterialsTag(real x, real y, int mats, player p)
    createTTEx(vec3(x, y, 32.0), vec2(64, 90),  "+" + I2S(mats), 10.0, 3.0, COLOR_MATERIALS_TAG, p)