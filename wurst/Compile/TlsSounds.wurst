package TlsSounds
import SoundUtils

// ============================================================================
public abstract class TlsSounds
  static sound questCompleted
  static SoundDefinition array[3] foundLumber
  static SoundDefinition array[3] foundGold

  // ============================================================================
  static function getRandomFoundLumber() returns SoundDefinition
    return foundLumber[GetRandomInt(0, 2)]

  // ============================================================================
  static function getRandomFoundGold() returns SoundDefinition
    return foundGold[GetRandomInt(0, 2)]

// ============================================================================
function initializeSounds()

  TlsSounds.questCompleted = CreateSound(Sounds.questCompleted, false, false, false, 10, 10, "")
  SetSoundParamsFromLabel(TlsSounds.questCompleted, "QuestCompleted")
  SetSoundDuration(TlsSounds.questCompleted, 5154)

  for i = 0 to 2
    TlsSounds.foundGold[i] = new SoundDefinition("sound\\interface\\receivegold.flac", false, false)
    TlsSounds.foundGold[i].volume = 80
    TlsSounds.foundGold[i].pitch += (i - 1) * 0.1

  for i = 0 to 2
    TlsSounds.foundLumber[i] = new SoundDefinition("abilities\\spells\\items\\resourceitems\\bundleoflumber.flac", false, false)
    TlsSounds.foundLumber[i].volume = 80
    TlsSounds.foundLumber[i].pitch += (i - 1) * 0.1

// ============================================================================
init
  initializeSounds()