package Upgrade_LimitResearch
import TlsUpgradeIds
import TlsUpgradeDefinition

// ============================================================================
@compiletime function createUpgrade()
  let def = new TlsUpgradeDefinition(TlsUpgradeIds.limitPrimaryResearch, 1)

  // Level 1
  def.setName(1, "You can only pick one research")
  def.setTooltip(1, "You can only pick one research")