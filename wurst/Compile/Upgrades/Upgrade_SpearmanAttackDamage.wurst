package Upgrade_SpearmanAttackDamage
import Icons
import TlsUpgradeDefinition
import TlsUnitIds
import ObjectIds
import TlsUpgradeIds

// ============================================================================
public class SpearmanAttackDamageUgpradeDefinition extends TlsUpgradeDefinition

  // --------------------------------------------------------------------------
  construct(int newId)
    super(newId, 3)

    setButtonPositionX(0)
    setButtonPositionY(2)

    addEffectAttackDiceBonus(1, 1)
    addEffectAttackDamageBonus(10, 20)

    setClass(UpgradeClass.Ranged)
    setGoldCostBase(0)
    setGoldCostIncrement(2)    
    setLumberCostBase(450)
    setLumberCostIncrement(450)
    setRace(Race.Human)    
    setTimeBase(30)
    setTimeIncrement(15)
    setTransferWithUnitOwnership(false)

    setIcon(1, Icons.bTNSteelRanged)
    setIcon(2, Icons.bTNThoriumRanged)
    setIcon(3, Icons.bTNArcaniteRanged)

    setRequirements(1, "")
    setRequirements(2, commaList(TlsUnitIds.headquarters3))
    setRequirements(3, commaList(TlsUnitIds.headquarters4))
    
    setName(1, "Reinforced Spears")
    setName(2, "Improved Reinforced Spears")
    setName(3, "Advanced Reinforced Spears")

    setTooltip(1, "Upgrade to Reinforced Spears")
    setTooltip(2, "Upgrade to Improved Reinforced Spears")
    setTooltip(3, "Upgrade to Advanced Reinforced Spears")

    setTooltipExtended(1, "Increases the attack damage of Spearman.")
    setTooltipExtended(2, "Further increases the attack damage of Spearman.")
    setTooltipExtended(3, "Further increases the attack damage of Spearman.")

// ============================================================================
@compiletime function createUpgrade()
  new SpearmanAttackDamageUgpradeDefinition(TlsUpgradeIds.spearmanAttackDamage)