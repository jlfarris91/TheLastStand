package Upgrade_SpikeDurability
import TlsUpgradeDefinition
import TlsUnitIds
import ObjectIds
import TlsUpgradeIds

// ============================================================================
@compiletime function createUpgrade()
  let def = new TlsUpgradeDefinition(TlsUpgradeIds.spikeDurability, 6)
    ..setButtonPositionX(1)
    ..setButtonPositionY(2)
    ..addEffectHitPointBonusPercent(0.12, 0.12)
    ..addEffectAttackDamageBonus(6, 10)
    ..setClass(UpgradeClass.Melee)
    ..setGoldCostBase(0)
    ..setGoldCostIncrement(1)
    ..setLumberCostBase(300)
    ..setLumberCostIncrement(300)
    ..setRace(Race.Human)
    ..setTimeBase(30)
    ..setTimeIncrement(5)

  // Level 1
  def.setName(1, "Iron Spikes")
  def.setTooltip(1, "Upgrade to Iron Spikes")
  def.setTooltipExtended(1, "Increases the health and attack damage of spikes.")
  def.setIcon(1, "ReplaceableTextures\\CommandButtons\\BTNSpikes.tga")
  def.setRequirements(1, "")

  // Level 2
  def.setName(2, "Reinforced Iron Spikes")
  def.setTooltip(2, "Upgrade to Reinforced Iron Spikes")
  def.setTooltipExtended(2, "Further increases the health and attack damage of spikes.")
  def.setIcon(2, "ReplaceableTextures\\CommandButtons\\BTNSpikes.tga")
  def.setRequirements(2, commaList(TlsUnitIds.workbench))

  // Level 3
  def.setName(3, "Steel Spikes")
  def.setTooltip(3, "Upgrade to Steel Spikes")
  def.setTooltipExtended(3, "Further increases the health and attack damage of spikes.")
  def.setIcon(3, "ReplaceableTextures\\CommandButtons\\BTNImprovedSpikes.tga")
  def.setRequirements(3, "")
  
  // Level 4
  def.setName(4, "Reinforced Steel Spikes")
  def.setTooltip(4, "Upgrade to Reinforced Steel Spikes")
  def.setTooltipExtended(4, "Further increases the health and attack damage of spikes.")
  def.setIcon(4, "ReplaceableTextures\\CommandButtons\\BTNImprovedSpikes.tga")
  def.setRequirements(4, commaList(TlsUnitIds.workshop))
  
  // Level 5
  def.setName(5, "Imbued Spikes")
  def.setTooltip(5, "Upgrade to Imbued Spikes")
  def.setTooltipExtended(5, "Further increases the health and attack damage of spikes.")
  def.setIcon(5, "ReplaceableTextures\\CommandButtons\\BTNReinforcedSpikes.tga")
  def.setRequirements(5, commaList(TlsUnitIds.workshop))
  
  // Level 6
  def.setName(6, "Reinforced Imbued Spikes")
  def.setTooltip(6, "Upgrade to Reinforced Imbued Spikes")
  def.setTooltipExtended(6, "Further increases the health and attack damage of spikes.")
  def.setIcon(6, "ReplaceableTextures\\CommandButtons\\BTNReinforcedSpikes.tga")
  def.setRequirements(6, commaList(TlsUnitIds.workshop))