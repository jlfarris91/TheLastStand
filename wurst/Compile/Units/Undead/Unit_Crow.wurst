package Unit_Crow
import UnitIds
import TlsUnitIds
import UnitObjEditing
import TlsAbilityIds
import ObjectIds

constant int CROW_MOVEMENT_SPEED = 400
constant int CROW_ATTACK_RANGE = 25
constant real CROW_ATTACK_COOLDOWN = 5.0
constant int CROW_ATTACK_DAMAGE = 10
constant int CROW_HEALTH = 30
constant real CROW_HEALTH_REGEN = 0.0

@compiletime function createCrow()
  new UnitDefinition(TlsUnitIds.crow, UnitIds.frostwyrm)
    ..setName("Crow")
    ..setNormalAbilities(commaList(TlsAbilityIds.infectedWound))
    ..setIconGameInterface("ReplaceableTextures\\CommandButtons\\BTNWarEagle.blp")
    ..setModelFile("units\\creeps\\Medivh\\Medivh.mdl")
    ..setRequiredAnimationNames("stand,alternate")
    ..setRequiredAnimationNamesAttachments("")
    ..setScalingValue(0.5)
    ..setSelectionScale(1.0)
    ..setShadowImageCenterX(45)
    ..setShadowImageCenterY(45)
    ..setShadowImageWidth(100)
    ..setShadowImageHeight(100)
    ..setTintingColorRed(150)
    ..setTintingColorGreen(150)
    ..setTintingColorBlue(150)
    ..setAcquisitionRange(0.0)
    ..setAttack1AreaofEffectTargets("")
    ..setAttack1AttackType(AttackType.Normal)
    ..setAttack1CooldownTime(CROW_ATTACK_COOLDOWN)
    ..setAttack1DamageBase(CROW_ATTACK_DAMAGE)
    ..setAttack1DamageNumberofDice(1)
    ..setAttack1Range(CROW_ATTACK_RANGE)
    ..setAttack1TargetsAllowed("ground")
    ..setAttack1WeaponSound(WeaponSound.WoodLightBash)
    ..setAttack1WeaponType(WeaponType.Normal)
    ..setAttacksEnabled(1)
    ..setMovementHeight(180.0)
    ..setMovementHeightMinimum(0.0)
    ..setSpeedBase(CROW_MOVEMENT_SPEED)
    ..setTurnRate(3.0)
    ..setCollisionSize(0)
    ..setUnitSoundSet("Vulture")
    ..setGoldBountyAwardedBase(0)
    ..setGoldBountyAwardedNumberofDice(0)
    ..setGoldBountyAwardedSidesperDie(0)
    ..setHitPointsMaximumBase(CROW_HEALTH)
    ..setHitPointsRegenerationRate(CROW_HEALTH_REGEN)
    ..setHitPointsRegenerationType("always")
    ..setUpgradesUsed("_")