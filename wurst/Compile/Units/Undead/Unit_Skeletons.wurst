package Unit_Skeletons
import TlsUnitDefinition
import TlsUndeadUnitDefinition
import UndeadUnitCompileUtils
import AbilityIds

// ============================================================================
@compiletime function createSkeletons()

  new TlsUndeadUnitDefinition(TlsUnitIds.Undead.skeletonArchers[0], UnitIds.skeletalarcher)
    ..setCollisionSize(16.0)
    ..setCommonDefinitionForGroundRangedEnemy()
    ..setCommonDefinitionTier1()
    ..protectAgainstUnitRecycler()
    ..setTooltipBasic("Skeleton Archer - Tier I")
    ..setTooltipExtended("Light ranged unit.")

  new TlsUndeadUnitDefinition(TlsUnitIds.Undead.skeletonArchers[1], UnitIds.burningarcher)
    ..setScalingValue(1.0)
    ..setCollisionSize(16.0)
    ..setCommonDefinitionForGroundRangedEnemy()
    ..setCommonDefinitionTier2()
    ..protectAgainstUnitRecycler()
    ..setNormalAbilities(commaList(AbilityIds.searingArrows, AbilityIds.firebolt1))
    ..setTooltipBasic("Burning Archer - Tier II")
    ..setTooltipExtended("Light ranged unit that shoots Searing Arrows and can cast Fire Bolt.")

  new TlsUndeadUnitDefinition(TlsUnitIds.Undead.skeletonArchers[2], UnitIds.skeletalmarksman)
    ..setCollisionSize(16.0)
    ..setCommonDefinitionForGroundRangedEnemy()
    ..setCommonDefinitionTier3()
    ..protectAgainstUnitRecycler()
    ..setNormalAbilities(commaList(AbilityIds.coldArrows1, AbilityIds.frostBolt))
    ..setTooltipBasic("Skeletal Marksman - Tier III")
    ..setTooltipExtended("Light ranged unit that shoots Cold Arrows and can cast Frost Bolt.")