package Unit_Ghosts
import TlsUnitDefinition
import AbilityIds
import TlsUndeadUnitDefinition
import UndeadUnitCompileUtils

// ============================================================================
@compiletime function createGhosts()

  new TlsUndeadUnitDefinition(TlsUnitIds.Undead.ghosts[0], UnitIds.ghost)
    ..setName("Ghost")
    ..setNameEditorSuffix("Tier I")
    ..setArmorType(ArmorType.Unarmored)
    ..setAttack1AttackType(AttackType.Magic)
    ..setNormalAbilities(commaList(TlsAbilityIds.curse))
    ..setDefaultActiveAbility(commaList(AbilityIds.cursecreep))
    ..setCommonDefinitionForGroundRangedEnemy()
    ..setCommonDefinitionTier1()
    ..protectAgainstUnitRecycler()
    ..setMovementType(MovementType.Fly)
    ..setMovementHeight(0)
    ..setMovementHeightMinimum(0)
    ..setTooltipBasic("Ghost - Tier I")
    ..setTooltipExtended("A Magic spirit that fades in and out of existence. Can cast Curse.")

  new TlsUndeadUnitDefinition(TlsUnitIds.Undead.ghosts[1], UnitIds.wraith)
    ..setName("Wraith")
    ..setNameEditorSuffix("Tier II")
    ..setArmorType(ArmorType.Unarmored)
    ..setAttack1AttackType(AttackType.Magic)
    ..setNormalAbilities(commaList(TlsAbilityIds.curse))
    ..setDefaultActiveAbility(commaList(AbilityIds.cursecreep))
    ..setCommonDefinitionForGroundRangedEnemy()
    ..setCommonDefinitionTier2()
    ..protectAgainstUnitRecycler()
    ..setTooltipBasic("Wraith - Tier II")
    ..setTooltipExtended("A Magic spirit that fades in and out of existence. Can cast Curse.")

  new TlsUndeadUnitDefinition(TlsUnitIds.Undead.ghosts[2], UnitIds.wraith)
    ..setName("Banshee")
    ..setNameEditorSuffix("Tier III")
    ..setIconGameInterface("ReplaceableTextures\\CommandButtons\\BTNSylvanasGhost.blp")
    ..setModelFile("Units\\Undead\\SylvanasBanshee\\SylvanasBanshee.mdl")
    ..setScalingValue(1.2)
    ..setArmorType(ArmorType.Unarmored)
    ..setAttack1AttackType(AttackType.Magic)
    ..setNormalAbilities(commaList(TlsAbilityIds.curse))
    ..setDefaultActiveAbility(commaList(AbilityIds.cursecreep))
    ..setCommonDefinitionForGroundRangedEnemy()
    ..setCommonDefinitionTier3()
    ..protectAgainstUnitRecycler()
    ..setTooltipBasic("Banshee - Tier III")
    ..setTooltipExtended("A Magic spirit that fades in and out of existence. Can cast Curse.")