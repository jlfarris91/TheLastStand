package Unit_Misc
import TlsUnitDefinition
import AbilityIds
import TlsBuildingDefinition
import Icons
import Doodads
import Abilities

// ============================================================================
@compiletime function createUnits()

  new TlsUnitDefinition(TlsUnitIds.Undead.ghoul, UnitIds.ghoul)
    ..setAttack1AttackType(AttackType.Normal)
    ..setArmorType(ArmorType.Medium)

  new TlsUnitDefinition(TlsUnitIds.Undead.tentacle, UnitIds.tentacle)
    ..setAttack1AttackType(AttackType.Normal)
    ..setArmorType(ArmorType.Fortified)

  new TlsUnitDefinition(TlsUnitIds.Undead.forgottenOne, UnitIds.forgottenone)
    ..setAttacksEnabled(0)
    ..setArmorType(ArmorType.Fortified)

  new TlsUnitDefinition(TlsUnitIds.Undead.gargoyle, UnitIds.gargoyle)
    ..setAttack1AttackType(AttackType.Magic)
    ..setArmorType(ArmorType.Small)

  new TlsUnitDefinition(TlsUnitIds.Undead.skeletonOrc, UnitIds.skeletalorc)
    ..setAttack1AttackType(AttackType.Normal)
    ..setArmorType(ArmorType.Medium)

  new TlsUnitDefinition(TlsUnitIds.Undead.skeletonOrcGrunt, UnitIds.skeletalorcgrunt)
    ..setAttack1AttackType(AttackType.Normal)
    ..setArmorType(ArmorType.Medium)

  new TlsUnitDefinition(TlsUnitIds.Undead.skeletonOrcChampion, UnitIds.skeletalorcchampion)
    ..setAttack1AttackType(AttackType.Normal)
    ..setArmorType(ArmorType.Large)

  new TlsUnitDefinition(TlsUnitIds.Undead.meatWagon, UnitIds.meatwagon)
    ..setAttack1AttackType(AttackType.Siege)
    ..setArmorType(ArmorType.Large)

  new TlsUnitDefinition(TlsUnitIds.Undead.cryptFiend, UnitIds.cryptfiend)
    ..setAttack1AttackType(AttackType.Magic)
    ..setArmorType(ArmorType.Medium)

  new TlsUnitDefinition(TlsUnitIds.Undead.shade, UnitIds.shade)
    ..setAttack1AttackType(AttackType.Magic)
    ..setArmorType(ArmorType.Small)

  new TlsBuildingDefinition(TlsUnitIds.Undead.monolith, UnitIds.guardtower)
    ..setNormalAbilities(commaList(AbilityIds.blight))
    ..setGroundTexture("USMA")
    ..setIconGameInterface(Icons.bTNArcaniteArchitecture)
    ..setModelFile(Doodads.obelisk0)
    ..setProjectileLaunchZ(500)
    ..setScalingValue(2.0)
    ..setSelectionScale(3.5)
    ..setArmorType(ArmorType.Fortified)
    ..setArmorSoundType(ArmorSoundType.Stone)
    ..setAttack1MaximumNumberofTargets(4)
    ..setAttack1ProjectileArc(0)
    ..setAttack1ProjectileArt(Abilities.fireBallMissile)
    ..setAttack1ProjectileHomingEnabled(true)
    ..setAttack1Range(1024)
    ..setMinimumAttackRange(128)    
    ..setUpgradesTo("")
    ..setUpgradesUsed("")
    ..setPathingMap("PathTextures\\8x8SimpleSolid.tga")