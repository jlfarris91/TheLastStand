package Hero_Scout
import Hero_Base
import TlsUnitDefinition
import Units

public HeroScoutDefinition g_heroDefinition

// ============================================================================
public class HeroScoutDefinition extends HeroBaseDefinition
  construct(int newId)
    super(newId)

  // --------------------------------------------------------------------------
  protected override function init_art()
    super.init_art()

    setModelFile(Units.rifleman1)

  // --------------------------------------------------------------------------
  protected override function init_text()
    super.init_text()

    setName("Scout")

// ============================================================================
@compiletime function createHero()
  g_heroDefinition = new HeroScoutDefinition(TlsUnitIds.heroScout)

// ============================================================================
init
  if (g_heroDefinition == null)
    createHero()