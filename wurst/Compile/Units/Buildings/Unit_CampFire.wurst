package Unit_CampFire
import UnitObjEditing
import TlsUnitIds
import UnitIds
import TlsAbilityIds
import ObjectIds
import TlsBuildingDefinition

@compiletime function createCampFire()
  new TlsBuildingDefinition(TlsUnitIds.campFire, UnitIds.fountainofhealth)
    ..setName("Camp Fire")
    ..setTooltipBasic("Build Camp |cffffcc00F|rire")
    ..setTooltipExtended("Standing near the Camp Fire restores <" + TlsUnitIds.campFire.toRawCode() + ",DataA1> stamina per second.")
    ..setHotkey("F")
    ..setRace(Race.Human)
    ..setButtonPositionX(2)
    ..setButtonPositionY(0)
    ..setDeathTimeseconds(0.1)
    ..setGroundTexture("")
    ..setIconGameInterface("ReplaceableTextures\\CommandButtons\\BTNFirePit.blp")
    ..setModelFile("Doodads\\Northrend\\Props\\FirePit\\FirePit.mdl")
    ..setScalingValue(0.75)
    ..setSelectionScale(1.75)
    ..setShadowTextureBuilding("")
    ..setTintingColorRed(100)
    ..setTintingColorBlue(100)
    ..setTintingColorGreen(100)
    ..setDeathType(0) // can't raise, doesn't decay
    ..setCollisionSize(16.0)
    ..setPathingMap("PathTextures\\4x4Default.tga")
    ..setPlacementRequires("unbuildable,unwalkable")
    ..setUnitSoundSet("LavaSpawn")
    ..setBuildTime(12)
    ..setCanFlee(false)
    ..setHideMinimapDisplay(true)
    ..setHitPointsMaximumBase(50)
    ..setHitPointsRegenerationType("day")
    ..setGoldCost(0)
    ..setMaterialCost(10)
    ..setRepairTime(8)
    ..setRepairGoldCost(0)
    ..setRepairLumberCost(3)
    ..setSightRadiusDay(400)
    ..setSightRadiusNight(400)
    ..setUnitClassification("mechanical")
    ..setUpgradesTo("")
    ..setUpgradesUsed("")
    ..setRequirements(commaList(TlsUnitIds.camp))
    ..setNormalAbilities(commaList(TlsAbilityIds.campFireRestoreStamina, TlsAbilityIds.recycle))
