package Unit_Workshop
import TlsUnitIds
import UnitObjEditing
import UnitIds
import Icons
import Buildings
import ObjectIds
import TlsAbilityIds
import TlsUpgradeIds

@compiletime function createWorkshop()
  new BuildingDefinition(TlsUnitIds.workshop, UnitIds.workshop)
    ..setName("Workshop")
    ..setTooltipBasic("Build |cffffcc00W|rorkshop")
    ..setTooltipExtended("Provides blueprints for Turrets, Lamps, Houses and Generators.|n|cffffcc00Allows for the training of Mechanics.|r")
    ..setHotkey("W")
    ..setButtonPositionX(3)
    ..setButtonPositionY(0)
    ..setGroundTexture("")
    ..setIconGameInterface(Icons.bTNWorkshop)
    ..setModelFile(Buildings.workshop)
    ..setScalingValue(0.75)
    ..setSelectionScale(2.0)
    ..setTintingColorRed(100)
    ..setTintingColorBlue(100)
    ..setTintingColorGreen(100)
    ..setCollisionSize(128.0)
    ..setPathingMap("PathTextures\\Tent.tga")
    ..setPlacementRequires("unbuildable,unwalkable")
    ..setHideMinimapDisplay(true)
    ..setGoldCost(100)
    ..setLumberCost(0)
    ..setRepairTime(10)
    ..setRepairGoldCost(10)
    ..setRepairLumberCost(0)
    ..setSightRadiusDay(400)
    ..setSightRadiusNight(400)
    ..setRequirements(commaList(TlsUnitIds.campHouse))
    ..setUnitsTrained("")
    ..setResearchesAvailable(commaList(
        TlsUpgradeIds.blueprintsGenerator,
        TlsUpgradeIds.blueprintsHouse,
        TlsUpgradeIds.blueprintsTurret,
        TlsUpgradeIds.blueprintsLamp))
    ..setNormalAbilities(commaList(
        TlsAbilityIds.sellItems,
        TlsAbilityIds.selectUnitShop,
        TlsAbilityIds.selectHero,
        TlsAbilityIds.selectUnit,
        TlsAbilityIds.workstation,
        TlsAbilityIds.workstationCargoHold,
        TlsAbilityIds.workstationCallToWork,
        TlsAbilityIds.workstationStopWorking,
        TlsAbilityIds.recycle,
        TlsAbilityIds.blightDispelSmall))