package Unit_ScoutTower
import UnitObjEditing
import TlsUnitIds
import UnitIds
import TlsAbilityIds
import ObjectIds
import Icons
import Buildings
import TlsBuildingDefinition
import GameConstants
import TlsUpgradeIds

public TlsBuildingDefinition g_scoutTowerDefinition

// ============================================================================
public class ScoutTowerDefinition extends TlsBuildingDefinition
  construct(int newId)
    super(newId, UnitIds.scouttower)
    setName("Scout Tower")
    setTooltipBasic("Build Scout |cffffcc00T|rower")
    setTooltipExtended("Basic observation tower.")
    setHotkey("T")
    setButtonPositionX(0)
    setButtonPositionY(0)
    setDeathTimeseconds(2.67)
    setGroundTexture("")
    setIconGameInterface(Icons.bTNHumanWatchTower)
    setModelFile(Buildings.humanTower1)
    setTintingColorRed(150)
    setTintingColorBlue(150)
    setTintingColorGreen(150)
    setPlacementRequires("unbuildable,unwalkable")
    setBuildTime(25)
    setHideMinimapDisplay(true)
    setHitPointsMaximumBase(1000)
    setRepairTime(25)
    setSightRadiusDay(1600)
    setSightRadiusNight(1000)
    setUpgradesTo("")
    setUpgradesUsed(commaList(TlsUpgradeIds.campDefense))
    setRequirements(commaList(TlsUnitIds.campHouse))
    setNormalAbilities(commaList(
      TlsAbilityIds.workstation,
      TlsAbilityIds.workstationCargoHold,
      TlsAbilityIds.workstationCallToWorkMarskman,
      TlsAbilityIds.workstationStopWorking,
      TlsAbilityIds.recycle,
      TlsAbilityIds.blightDispelSmall))

    setGoldCost(0)
    setMaterialCost(50)
    setRepairGoldCost(R2I(getGoldCost() * BUILDING_REPAIR_GOLD_SCALAR))
    setRepairLumberCost(R2I(getLumberCost() * BUILDING_REPAIR_LUMBER_SCALAR))
    setRecycleGoldRewarded(getGoldCost())
    setRecycleLumberRewarded(getLumberCost())

// ============================================================================
@compiletime function createScoutTower()
  g_scoutTowerDefinition = new ScoutTowerDefinition(TlsUnitIds.scoutTower)

// ============================================================================
init
  createScoutTower()