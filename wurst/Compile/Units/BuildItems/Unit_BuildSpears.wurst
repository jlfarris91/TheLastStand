package Unit_BuildSpears
import TlsUnitDefinition
import UnitIndexer
import MainItemLibrary
import TlsItemIds
import ItemBuildUnitDefinition
import Item_Spears

// ============================================================================
@compiletime function createItemBuildUnit()

  new ItemBuildUnitDefinition(TlsUnitIds.BuildItemUnits.buildSpears)
  ..setName(g_spearsDefinition.getName())
  ..setTooltipBasic("Build " + g_spearsDefinition.getName())
  ..setTooltipExtended(g_spearsDefinition.getTooltipExtended())
  ..setDescription(g_spearsDefinition.getDescription())
  ..setGoldCost(0)
  ..setLumberCost(45)
  ..setIconGameInterface(g_spearsDefinition.getInterfaceIcon())
  ..setBuildTime(15)
  ..setButtonPositionX(0)
  ..setButtonPositionY(0)
  ..setRequirements("")

// ============================================================================
function onUnitIndexed()
  let indexedUnit = getIndexingUnit()
  if (indexedUnit.getTypeId() != TlsUnitIds.BuildItemUnits.buildSpears)
    return

  let pos = indexedUnit.getPos()
  indexedUnit.remove()
  g_MainItemLibrary.createItem(TlsItemIds.spears, pos)

// ============================================================================
init
  onUnitIndex(function onUnitIndexed)