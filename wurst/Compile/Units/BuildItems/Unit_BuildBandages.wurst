package Unit_BuildBandages
import TlsUnitDefinition
import UnitIndexer
import MainItemLibrary
import TlsItemIds
import ItemBuildUnitDefinition
import Item_Bandages

// ============================================================================
@compiletime function createItemBuildUnit()

  new ItemBuildUnitDefinition(TlsUnitIds.buildBandages)
  ..setName(g_bandagesDefinition.getName())
  ..setTooltipBasic("Build " + g_bandagesDefinition.getName())
  ..setTooltipExtended(g_bandagesDefinition.getDescription())
  ..setGoldCost(g_bandagesDefinition.getGoldCost())
  ..setIconGameInterface(g_bandagesDefinition.getInterfaceIcon())
  ..setBuildTime(15)
  ..setButtonPositionX(1)
  ..setButtonPositionY(0)
  ..setRequirements(commaList(TlsUnitIds.camp))

// ============================================================================
function onUnitIndexed()
  let indexedUnit = getIndexingUnit()
  if (indexedUnit.getTypeId() != TlsUnitIds.buildBandages)
    return

  let pos = indexedUnit.getPos()
  indexedUnit.remove()
  g_MainItemLibrary.createItem(TlsItemIds.bandages, pos)

// ============================================================================
init
  onUnitIndex(function onUnitIndexed)