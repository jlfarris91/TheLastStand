package Unit_Priest
import TlsUnitDefinition
import SurvivorJobHeroDefinition
import TlsUnitDefinitionBuilder
import Range

public SurvivorJobHeroDefinition g_priest1Definition

// ============================================================================
@compiletime function createObjectDefinitions()

  g_priest1Definition = new SurvivorJobHeroDefinition(TlsUnitIds.Survivors.priest1, UnitIds.priest)
    ..setNormalAbilities(commaList(
      TlsAbilityIds.inventory2Slots,
      TlsAbilityIds.heal))
    ..setAcquisitionRange(600.0)
    ..setArmorSoundType(ArmorSoundType.Flesh)
    ..setAttack1AttackType(AttackType.Magic)
    ..setAttack1CooldownTime(2)
    ..setAttack1DamageRange(rangeInt(160, 240))
    ..setAttack1Range(600)
    ..setAttack1WeaponSound(WeaponSound.Nothing)
    ..setAttack1WeaponType(WeaponType.Missile)
    ..setAttacksEnabled(1)
    ..setDeathType(DeathType.CanRaiseDoesDecay)
    ..setDefenseBase(0)
    ..setArmorType(ArmorType.Unarmored)
    ..setDefenseUpgradeBonus(1)
    ..setHitPointsRegenerationRate(0.25)
    ..setManaMaximum(100)
    ..setManaInitialAmount(100)
    ..setAttack1DamageBase(60)
    ..setAttack1DamageNumberofDice(4)
    ..setAttack1DamageSidesperDie(20)
    ..setAttack1CooldownTime(3)
    ..setDefenseBase(0)
    ..setManaRegeneration(0.2)
    ..setSpeedBase(220)
    ..setName("Priest")
    ..addUnitClass(TlsUnitClassification.HUMAN)
    ..addUnitClass(TlsUnitClassification.MAGIC)
    ..build("The Priest can heal allies and attack with ranged magic. Can learn Inner Fire to increase an ally's damage and armor for a short period of time.",
      tooltipBuilder -> begin
        let structuresBuilt = new TooltipItem("Abilities: ")..addValue("Heal")
        tooltipBuilder.addItem(structuresBuilt)
      end)

// ============================================================================
init
  if (g_priest1Definition == null)
    createObjectDefinitions()