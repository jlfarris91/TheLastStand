package Ability_Repair
import AbilityObjEditing
import TlsAbilityIds

public constant real BASIC_REPAIR_REPAIR_TIME_RATIO = 1.5

// ============================================================================
@compiletime function createAbility()
  new AbilityDefinitionRepairHuman(TlsAbilityIds.basicRepair)
    ..presetRepairTimeRatio((int lvl) -> BASIC_REPAIR_REPAIR_TIME_RATIO)
    ..presetCastRange((int lvl) -> 128.0)
    ..presetTooltipNormal((int lvl) -> "Unskilled Repair")
    ..presetTooltipNormalExtended((int lvl) -> "Repairs mechanical units and structures slowly due to their lack of skill in construction.")
    ..setButtonPositionNormalX(1)
    ..setButtonPositionNormalY(2)
    ..setButtonPositionTurnOffX(1)
    ..setButtonPositionTurnOffY(2)
    ..presetTooltipTurnOff(lvl ->"|cffc3dbffRight-click to activate auto-casting.|r")
    ..presetTooltipTurnOffExtended(lvl ->"|cffc3dbffRight-click to deactivate auto-casting.|r")

  new AbilityDefinitionRestoration(TlsAbilityIds.restore)