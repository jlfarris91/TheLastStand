package Ability_BuilderRepair
import AbilityObjEditing
import TlsAbilityIds

// ============================================================================
@compiletime function createAbility()
  new AbilityDefinitionRepairHuman(TlsAbilityIds.builderRepair)
    ..presetRepairTimeRatio((int lvl) -> 0.75)
    ..presetTooltipNormalExtended((int lvl) -> "Repairs mechanical units and structures twice as fast as regular survivors at the cost of resources.")