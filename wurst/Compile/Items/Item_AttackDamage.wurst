  ..setName("Claws of Attack +60")
  ..setDescription("Increases attack damage by 60.")
  ..setTooltipBasic("Purchase Claws of Attack +60")
  ..setTooltipExtended("Increases the attack damage of the survivor by 60 when worn.")
  ..setAbilities(commaList(TlsAbilityIds.Items.attackDamage3))
