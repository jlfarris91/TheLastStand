  ..setAttackBonus(1, 120)

  g_itemDef_attackDamage4 = new TlsItemDefinition(TlsItemIds.attackDamage4, 'rat6')
  ..setName("Claws of Attack +120")
  ..setDescription("Increases attack damage by 120.")
  ..setTooltipBasic("Purchase Claws of Attack +120")
