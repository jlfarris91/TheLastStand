  ..setTooltipExtended("Increases the attack damage of the survivor by 10 when worn.")
  ..setAbilities(commaList(TlsAbilityIds.Items.attackDamage1))
  ..setInterfaceIcon(Icons.bTNClawsOfAttack)
  ..setGoldCost(0)
  ..setLumberCost(60)
  ..setStockInitial(2)
  ..setStockMaximum(4)
  ..setStockStartDelay(0)
  ..setStockReplenishInterval(60)
  ..addTlsUnitClassifications(TlsUnitClassification.HUMAN)
  ..build()

