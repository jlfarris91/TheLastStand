  ..setName(g_itemDef_armor4.getName())
  ..setTooltipBasic("Build " + g_itemDef_armor4.getName())
  ..setTooltipExtended(g_itemDef_armor4.getTooltipExtended())
  ..setDescription(g_itemDef_armor4.getDescription())
