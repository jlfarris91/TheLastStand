// ============================================================================
init

  if (g_itemDef_armor1 == null)
    createCompiletimeObjects()

  BuildItems.register(TlsItemIds.armor1, TlsUnitIds.BuildItemUnits.armor1)
  BuildItems.register(TlsItemIds.armor2, TlsUnitIds.BuildItemUnits.armor2)
  BuildItems.register(TlsItemIds.armor3, TlsUnitIds.BuildItemUnits.armor3)
  BuildItems.register(TlsItemIds.armor4, TlsUnitIds.BuildItemUnits.armor4)