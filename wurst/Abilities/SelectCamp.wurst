package SelectCamp
import RegisterEvents
import Camp
import HumanPlayerMetadata

constant int ABILITY_ID_CAMP = 'A00B'

function onCampAbilityCast()
  let u = GetSpellAbilityUnit()
  let p = u.getOwner()
  let camp = p.getHumanMetadataRequired().getCamp()
  let campUnit = camp.getCampUnit()
  SelectUnitForPlayerSingle(campUnit, p)

init
  registerSpellEffectEvent(ABILITY_ID_CAMP, function onCampAbilityCast)