package ViewCamp
import RegisterEvents
import Camp
import HumanPlayerMetadata

constant int ABILITY_ID_VIEWCAMP = 'A00M'

function onViewCampAbilityCast()
  let u = GetSpellAbilityUnit()
  let p = u.getOwner()
  let camp = p.getHumanMetadataRequired().getCamp()
  let campUnit = camp.getCampTent()
  SelectUnitForPlayerSingle(campUnit, p)
  PanCameraToTimedForPlayer(p, campUnit.getX(), campUnit.getY(), 2.0)

init
  registerSpellEffectEvent(ABILITY_ID_VIEWCAMP, function onViewCampAbilityCast)
