package ItemType

// ============================================================================
public class ItemType
  int id
  string name
  string tooltip
  string description
  string extendedTooltip
  string itemTypeName
  bool pawnable
  bool droppable
  bool dropOnDeath
  int maxStacks
  int maxStock

  // --------------------------------------------------------------------------
  construct(int id)
    this.id = id
    name = ""
    tooltip = ""
    description = ""
    extendedTooltip = ""
    itemTypeName = "Item"
    pawnable = false
    droppable = true
    dropOnDeath = true
    maxStacks = 1
    maxStock = 1

  // --------------------------------------------------------------------------
  function setMaxStacks(int value)
    maxStacks = value

  // --------------------------------------------------------------------------
  function setMaxStock(int value)
    maxStock = value