package Items
import ItemType
import TlsItemIds
import TlsJobItemIds

bool g_itemsDefined = false

// ============================================================================
public class ItemRarities
  static ItemRarity common
  static ItemRarity rare
  static ItemRarity epic
  static ItemRarity legendary
  static ItemRarity misc
  static ItemRarity food
  static ItemRarity coins

// ============================================================================
public function defineItems()

  if (g_itemsDefined)
    return

  ItemRarities.common = new ItemRarity("Common", fromHexString("FFC7C7C7").withoutAlpha())
  ItemRarities.rare = new ItemRarity("Rare", fromHexString("FF4293F5").withoutAlpha())
  ItemRarities.epic = new ItemRarity("Epic", fromHexString("FF7842F5").withoutAlpha())
  ItemRarities.legendary = new ItemRarity("Legendary", fromHexString("FFF2ED5E").withoutAlpha())
  ItemRarities.misc = new ItemRarity("Misc", fromHexString("FFC7B18F").withoutAlpha())..setApplyColorToItems(false)
  ItemRarities.food = new ItemRarity("Food", fromHexString("FF91C78F").withoutAlpha())..setApplyColorToItems(false)
  ItemRarities.coins = new ItemRarity("Coins", COLOR_GOLD.withoutAlpha())..setApplyColorToItems(false)

  // Common
  var itemRarity = ItemRarities.common
  ItemType.define(TlsItemIds.bandages, itemRarity)..setMaxStacks(10)..setStockMaximum(6)
  ItemType.define(TlsItemIds.portableBarricade, itemRarity)..setMaxStacks(2)..setStockMaximum(5)
  ItemType.define(TlsItemIds.shelter, itemRarity)..setStockMaximum(3)
  ItemType.define(TlsItemIds.armor1, itemRarity)..setStockMaximum(3)
  ItemType.define(TlsItemIds.attackSpeed1, itemRarity)..setStockMaximum(3)
  ItemType.define(TlsItemIds.attackDamage1, itemRarity)..setStockMaximum(3)
  ItemType.define(TlsItemIds.scrollOfCampPortal, itemRarity)..setStockMaximum(3)
  ItemType.define(TlsItemIds.staminaPotion1, itemRarity)..setMaxStacks(10)..setStockMaximum(6)
  ItemType.define(TlsItemIds.operationsManual1, itemRarity)..setStockMaximum(3)
  ItemType.define(TlsItemIds.flintAndTinder, itemRarity)..setMaxStacks(10)..setStockMaximum(3)

  ItemType.define(TlsJobItemIds.militia1, itemRarity)..setItemTypeName("Job Item")..setStockMaximum(1)
  ItemType.define(TlsJobItemIds.priest1, itemRarity)..setItemTypeName("Job Item")..setStockMaximum(1)
  ItemType.define(TlsJobItemIds.spearman1, itemRarity)..setItemTypeName("Job Item")..setStockMaximum(1)
  ItemType.define(TlsJobItemIds.builder1, itemRarity)..setItemTypeName("Job Item")..setStockMaximum(1)

  // Rare
  itemRarity = ItemRarities.rare
  ItemType.define(TlsItemIds.boots1, itemRarity)..setStockMaximum(1)
  ItemType.define(TlsItemIds.armor2, itemRarity)..setStockMaximum(2)
  ItemType.define(TlsItemIds.attackSpeed2, itemRarity)..setStockMaximum(2)
  ItemType.define(TlsItemIds.attackDamage2, itemRarity)..setStockMaximum(2)
  ItemType.define(TlsItemIds.nightScope, itemRarity)..setStockMaximum(1)
  ItemType.define(TlsItemIds.staminaPotion2, itemRarity)..setMaxStacks(10)..setStockMaximum(4)
  ItemType.define(TlsItemIds.wirtsPipe, itemRarity)..setMaxStacks(5)..setStockMaximum(1)
  ItemType.define(TlsItemIds.wirtsLeg, itemRarity)..setMaxStacks(3)..setStockMaximum(1)
  ItemType.define(TlsItemIds.monsterTooth, itemRarity)..setMaxStacks(5)..setStockMaximum(1)
  ItemType.define(TlsItemIds.wisdomKnuckle, itemRarity)..setMaxStacks(5)..setStockMaximum(1)
  ItemType.define(TlsItemIds.operationsManual2, itemRarity)..setStockMaximum(2)

  ItemType.define(TlsJobItemIds.militia2, itemRarity)..setItemTypeName("Job Item")..setStockMaximum(1)
  ItemType.define(TlsJobItemIds.priest2, itemRarity)..setItemTypeName("Job Item")..setStockMaximum(1)
  ItemType.define(TlsJobItemIds.spearman1, itemRarity)..setItemTypeName("Job Item")..setStockMaximum(1)

  // Epic
  itemRarity = ItemRarities.epic
  ItemType.define(TlsItemIds.grenade, itemRarity)..setMaxStacks(10)..setStockMaximum(2)
  ItemType.define(TlsItemIds.armor3, itemRarity)..setStockMaximum(1)
  ItemType.define(TlsItemIds.attackSpeed3, itemRarity)..setStockMaximum(1)
  ItemType.define(TlsItemIds.attackDamage3, itemRarity)..setStockMaximum(1)
  ItemType.define(TlsItemIds.staminaPotion3, itemRarity)..setMaxStacks(10)..setStockMaximum(2)
  ItemType.define(TlsItemIds.treasureHuntersPendant, itemRarity)..setStockMaximum(1)
  ItemType.define(TlsItemIds.bloodRedCape, itemRarity)..setMaxStacks(3)..setStockMaximum(1)
  ItemType.define(TlsItemIds.brassContraption, itemRarity)..setMaxStacks(3)..setStockMaximum(1)
  ItemType.define(TlsItemIds.lightningRod, itemRarity)..setMaxStacks(5)..setStockMaximum(1)
  ItemType.define(TlsItemIds.operationsManual3, itemRarity)..setStockMaximum(1)

  ItemType.define(TlsJobItemIds.builder2, itemRarity)..setItemTypeName("Job Item")..setStockMaximum(1)
  ItemType.define(TlsJobItemIds.militia3, itemRarity)..setItemTypeName("Job Item")..setStockMaximum(1)
  ItemType.define(TlsJobItemIds.spearman2, itemRarity)..setItemTypeName("Job Item")..setStockMaximum(1)
  ItemType.define(TlsJobItemIds.marksman1, itemRarity)..setItemTypeName("Job Item")..setStockMaximum(1)

  // Legendary
  itemRarity = ItemRarities.legendary
  ItemType.define(TlsItemIds.portableTurret, itemRarity)..setStockMaximum(1)
  ItemType.define(TlsItemIds.thunderlizardDiamond, itemRarity)..setStockMaximum(1)
  ItemType.define(TlsItemIds.sacredRelic, itemRarity)..setStockMaximum(1)
  ItemType.define(TlsItemIds.luckyHorseshoe, itemRarity)..setMaxStacks(3)..setStockMaximum(1)
  ItemType.define(TlsItemIds.attackDamage4, itemRarity)..setStockMaximum(1)
  ItemType.define(TlsItemIds.shapeshiftingKey, itemRarity)..setStockMaximum(1)

  // Food
  itemRarity = ItemRarities.food
  ItemType.define(TlsItemIds.cheese, itemRarity)..setMaxStacks(10)..setStockMaximum(10)
  ItemType.define(TlsItemIds.rawMeat, itemRarity)..setMaxStacks(10)
  ItemType.define(TlsItemIds.cookedMeat, itemRarity)..setMaxStacks(10)..setStockMaximum(3)

  // Misc
  itemRarity = ItemRarities.misc
  ItemType.define(TlsItemIds.obelisk, itemRarity)
  ItemType.define(TlsItemIds.heart, itemRarity)
  ItemType.define(TlsItemIds.bundleOfWood, itemRarity)

  // Coins
  itemRarity = ItemRarities.coins
  ItemType.define(TlsItemIds.coinSmall, itemRarity)
  ItemType.define(TlsItemIds.coinMedium, itemRarity)
  ItemType.define(TlsItemIds.coinLarge, itemRarity)
  ItemType.define(TlsItemIds.coinEpic, itemRarity)

  g_itemsDefined = true

// ============================================================================
init
  defineItems()