package WirtsLeg
import TlsItemIds
import UnitMetadata
import ItemEvents
import UnitPropertiesComponent

constant real EVADE_CHANCE = 10.0

// ============================================================================
function onUnitAcquiredItem(unit _unit, item _item)

  let metadata = _unit.getMetadata()
  if (metadata == null)
    return

  let comp = metadata.getOrAddUnitPropertiesComponent()
  if (comp == null)
    return

  comp.setEvadeChancePercentage(comp.getEvadeChancePercentage() + EVADE_CHANCE)

// ============================================================================
function onUnitDroppedItem(unit _unit, item _item)

  let metadata = _unit.getMetadata()
  if (metadata == null)
    return

  let comp = metadata.getOrAddUnitPropertiesComponent()
  if (comp == null)
    return

  comp.setEvadeChancePercentage(comp.getEvadeChancePercentage() - EVADE_CHANCE)

// ============================================================================
init
  registerItemAcquiredEvent(TlsItemIds.wirtsLeg, (unit u, item i) -> onUnitAcquiredItem(u, i))
  registerItemDroppedEvent(TlsItemIds.wirtsLeg, (unit u, item i) -> onUnitDroppedItem(u, i))