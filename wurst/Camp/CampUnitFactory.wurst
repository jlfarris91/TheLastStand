package CampUnitFactory
import initlater ICampUnitFactory
import initlater ICampUnit
import Unit_Gate
import Gate
import ICamp
import GameConstants
import Survivor

public class CampUnitFactory implements ICampUnitFactory
  override function createCampUnit(ICamp camp, unit u) returns ICampUnit
    let unitId = u.getTypeId()

    if (unitId == UNIT_ID_GATE_HORIZONTAL_BUILD or
        unitId == UNIT_ID_GATE_HORIZONTAL_OPEN or
        unitId == UNIT_ID_GATE_HORIZONTAL_CLOSED or
        unitId == UNIT_ID_GATE_DIAGONAL_OPEN or
        unitId == UNIT_ID_GATE_DIAGONAL_CLOSED)
      print("Creating Gate")
      return new Gate(camp, u)

    if (unitId == UNIT_ID_SURVIVOR or
        unitId == UNIT_ID_SURVIVOR_BUILDER or
        unitId == UNIT_ID_SURVIVOR_MARKSMAN or
        unitId == UNIT_ID_SURVIVOR_MEDIC)
      print("Creating Survivor")
      return new Survivor(camp, u)

    return null

